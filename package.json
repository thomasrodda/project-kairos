{
  "name": "project-kairos",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @kairos/web dev & yarn workspace @kairos/api dev",
    "build": "yarn workspaces run build",
    "lint": "node ./node_modules/.bin/eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "yarn workspaces run typecheck",
    "test": "yarn workspaces run test",
    "format": "node ./node_modules/.bin/prettier --write \"**/*.{ts,tsx,js,jsx,json,md,scss,css}\"",
    "postinstall": "chmod +x ./fix-permissions.sh && ./fix-permissions.sh"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  }
}
